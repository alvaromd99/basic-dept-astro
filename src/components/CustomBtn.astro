---
const { text } = Astro.props;
---

<button class="custom-button">
  <p class="btn-para">{text}</p>
</button>

<style>
  .custom-button {
    all: unset;
    cursor: pointer;
    border: 1px solid black;
    padding: 0.6rem 1.6rem;
    border-radius: 2rem;
    transition: 0.3s;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }
  .btn-para {
    text-transform: uppercase;
    font-size: 0.8rem;
    font-weight: bold;
    margin: 0;
    position: relative;
    z-index: 2;
    transition: color 0.4s ease;
  }
  .custom-button::after {
    content: "";
    background-color: black;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 100%;
    left: 0;
    transition: top 0.4s ease;
    z-index: 0;
  }
  .custom-button:hover::after {
    top: 0;
  }
  .custom-button:hover .btn-para {
    color: white;
  }
</style>
