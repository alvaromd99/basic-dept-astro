---
import { Icon } from "astro-icon/components";
import NavLink from "../components/NavLink.astro";
---

<nav>
  <Icon name="logo" width={180} height={30} />
  <ul>
    <li>
      <NavLink location="" text="work" />
    </li>
    <li>
      <NavLink location="" text="about" />
    </li>
    <li>
      <NavLink location="" text="news" />
    </li>
    <li>
      <NavLink location="" text="thinking" />
    </li>
    <li>
      <NavLink location="" text="carrers" />
    </li>
    <li>
      <NavLink location="" text="contact" />
    </li>
  </ul>
  <Icon name="points" width={26} height={10} />
</nav>

<style>
  [data-icon] {
    cursor: pointer;
  }
  nav {
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-inline: 5rem;
    padding-block: 3rem;
  }
  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 4rem;
  }
  li {
    font-size: 0.9rem;
    text-transform: uppercase;
  }
</style>
